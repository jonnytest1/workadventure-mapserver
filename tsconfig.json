{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": "./",
        "paths": {
            "@jonnygithub/*": [
                "../jonny-maps/scripts/*"
            ]
        },
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "target": "es6",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "useDefineForClassFields": true,
        // "traceResolution": true,
        "typeRoots": [
            "node_modules/@types",
            "customTypes/*",
        ],
        "experimentalDecorators": true,
        "outDir": "compiledjs/shutup",
        "lib": [
            "dom",
            "es6"
        ]
    },
    "include": [
        "./public/**/*",
        "./resources/**/*",
        "./test/**/*",
        "./util/**/*",
        "../jonny-maps/scripts"
    ],
}