    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Remote Node",
            "address": "192.168.178.54",
            "port": 15748,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/var/node",
            "restart": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "start MapServer",
            "autoAttachChildProcesses": true,
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}\\index.ts"
            ],
            "internalConsoleOptions": "openOnFirstSessionStart"
        }
    ]
}